<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
  xmlns:beans="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/security
           http://www.springframework.org/schema/security/spring-security-3.2.xsd">
	<http auto-config="true">
		<intercept-url pattern="/backend/login.jsp" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/backend/images/login/**" access="IS_AUTHENTICATED_ANONYMOUSLY" />
		<intercept-url pattern="/backend/**" access="ROLE_ADMIN" />
		<form-login login-page="/backend/login.jsp" default-target-url="/backend/index.do"
			authentication-failure-url="/backend/login.jsp?status=error" />
		<logout logout-success-url="/backend/login.jsp?status=logout" /> 
	</http>
	<authentication-manager>
     <authentication-provider>
       <jdbc-user-service data-source-ref="dataSource" 
       		authorities-by-username-query="SELECT user_email as username, authority_name as authority FROM digital_users_authority WHERE user_email = ?"
            users-by-username-query="SELECT user_email as username, user_password as password, 1 FROM digital_users WHERE user_email = ?"/>
     </authentication-provider>
   </authentication-manager>
   <beans:bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
        <beans:property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <beans:property name="url" value="jdbc:mysql://localhost:3306/digital"/>
        <beans:property name="username" value="root"/>
        <beans:property name="password" value="admin0303"/>
   </beans:bean>
</beans:beans>